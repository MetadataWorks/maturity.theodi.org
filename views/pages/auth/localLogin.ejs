<%- include('../../partials/header') %>

<section class="page-title light-grey content-block">
  <h1>Login</h1>
</section>

<section class="content-block light-grey">
  <div class="login-form-container">
    
    <!-- ✅ Show error message if exists -->
    <% if (error) { %>
      <div class="alert alert-danger" style="color: red; padding: 10px; margin-bottom: 10px;">
        <%= error %>
      </div>
    <% } %>

    <form action="/auth/local" method="POST">
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required />
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />
      </div>

      <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <!-- ✅ Show "Forgot Password?" link only if error is "Incorrect email or password" -->
    <% if (error === "Incorrect email or password") { %>
      <p>Forgot your password? <a href="/auth/forgot-password">Click here</a></p>
    <% } %>

    <p>Don't have an account? <a href="/auth/register">Register here</a></p>

  </div>
</section>

<%- include('../../partials/footer') %>
