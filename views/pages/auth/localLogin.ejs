<%- include('../../partials/header') %>

<section class="content-block-register">
  <div class="login-form-container">
    <% if (error) { %>
      <div class="alert alert-danger" style="color: red; padding: 10px; margin-bottom: 10px;">
        <%= error %>
      </div>
    <% } %>
    <form action="/auth/local" method="post" class="login-form">
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" required />
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" required />
      </div>
      <div class="form-group-btn">
        <button type="submit">Login</button>
      </div>

      <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <!-- âœ… Show "Forgot Password?" link only if error is "Incorrect email or password" -->
    <% if (error === "Incorrect email or password") { %>
      <p>Forgot your password? <a href="/auth/forgot-password">Click here</a></p>
    <% } %>

    <p>Don't have an account? <a href="/auth/register">Register here</a></p>

  </div>
</section>

<%- include('../../partials/footer') %>
