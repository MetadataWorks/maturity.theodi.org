<%- include('../../partials/header') %>

<section class="page-title light-grey content-block">
  <h1>Forgot Password</h1>
</section>

<section class="content-block light-grey">
  <div class="login-form-container">

    <% if (error) { %>
      <div class="alert alert-danger" style="color: red; padding: 10px; margin-bottom: 10px;">
        <%= error %>
      </div>
    <% } %>

    <% if (message) { %>
      <div class="alert alert-success" style="color: green; padding: 10px; margin-bottom: 10px;">
        <%= message %>
      </div>
    <% } %>

    <form action="/auth/forgot-password" method="POST">
      <div class="form-group">
        <label for="email">Enter your email:</label>
        <input type="email" name="email" required>
      </div>

      <button type="submit" class="btn btn-primary">Send Reset Link</button>
    </form>

    <p>Remembered your password? <a href="/auth/local">Login here</a></p>

  </div>
</section>

<%- include('../../partials/footer') %>